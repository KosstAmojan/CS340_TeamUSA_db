<html>
    <head>
    <title></title>
    {{#each styles}}
        <link rel="stylesheet" href="/styles/{{this}}">
    {{/each}}
    </head>
<h1>Update {{parks.name}}:</h1>
<form id="update-park" action="/parks" method="post">
    Name: <input type="text" name="name" value="{{parks.name}}" required><br>
    Maximum Occupancy:<input type="number" name="maxOccupancy" value="{{parks.maxOccupancy}}" min=1 required><br>
    Date Built:<input type="date" name="dateBuilt" value="{{parks.dateBuilt}}" required><br>
</form>
<button onclick="updatePark({{parks.parkID}})">Update</button>
<script defer>"selectPark({{parks.parkID}})";</script>

</html>