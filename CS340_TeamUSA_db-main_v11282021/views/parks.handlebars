<html>
{{#each foo}}
{{this}}
{{/each}}
<nav>
    <div class="topnav">
        <a class="active" , href="#" onclick="change_page('index.html')">Home</a>
        <a href="#" onclick="change_page('/parks')">Parks</a>
        <a href="#" onclick="change_page('/rides')">Rides</a>
        <a href="#" onclick="change_page('/guests')">Guests</a>
        <a href="#" onclick="change_page('/ridesrating')">RidesRating</a>
        <a href="#" onclick="change_page('/guestrides')">GuestRides</a>
    </div>
</nav>
<div class="center">
    <h3>Parks in Disney World USA</h3>
</div>
<div class="center">
    <p>This page allows you to view, add, or update an existing Park</p>
</div>

<table class="center">
    <thead>
        <th>parkID</th>
        <th>name</th>
        <th>maxOccupancy</th>
        <th>dateBuilt</th>
    </thead>
    <tbody>
        {{#each parks}}
        <td>{{parkID}}</td>
        <td>{{name}}</td>
        <td>{{maxOccupancy}}</td>
        <td>{{dateBuilt}}</td>
        <td><button onclick="deletePark({{parkID}})">Remove</button></td>
        <td><a href="/parks/{{parkID}}">Update</a></td>
        </tr>
        {{/each}}
    </tbody>
</table><br><br>

<form id="addpark" action="/parks" method="post">
    Name: <input type="text" name="name"><br>
    Maximum Occupancy: <input type="number" name="maxOccupancy"><br>
    Date Built: <input type="date" name="dateBuilt"><br>
    <input type="submit" value="Submit">
</form>
<br>

<form id='filter_parks' action='' method=''>
    <label> Filter by Park</label>
    <select id='parks_filter' name="parks">
        {{#each parks}}
        <option value="{{parkID}}">{{parkID}} - {{name}}</option>
        {{/each}}
    </select><br>
    <input type="button" value="Filter" onclick="filterParks()">
</form><br>


<form id='search_parks' action='' method=''>
    <label> Search Parks by name:</label>
    <input id='name_search_string' type='text' name='name_search_string' value=''>
    <input type="button" value="Search" onclick="searchParksByName()">
</form>

</html>