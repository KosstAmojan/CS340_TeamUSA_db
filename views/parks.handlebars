        <a href="#" onclick="change_page('/ridesrating')">Ride Ratings</a>
        <a href="#" onclick="change_page('/guestrides')">Guest Rides</a>
    </div>
</nav>
<div class="center">
    <h3>Parks in Disney World USA</h3>
</div>
<div class="center">
    <p>This page allows you to view, add, or update an existing Park</p>
</div>

<table class="center">
    <thead>
        <th>Park ID</th>
        <th>Name</th>
        <th>Max Occupancy</th>
        <th>Date Built</th>
    </thead>
    <tbody>
        {{#each parks}}
        <td>{{parkID}}</td>
        <td>{{name}}</td>
        <td>{{maxOccupancy}}</td>
        <td>{{dateBuilt}}</td>
        <td><button onclick="deletePark({{parkID}})">Remove</button></td>
        <td><a href="/parks/{{parkID}}">Update</a></td>
        </tr>
        {{/each}}
    </tbody>
</table><br><br>

<form id="addpark" action="/parks" method="post">
    Name: <input type="text" name="name" required><br>
    Maximum Occupancy: <input type="number" name="maxOccupancy" min=1 required><br>
    Date Built: <input type="date" name="dateBuilt" required><br>
    <input type="submit" value="Submit">
</form>
<br>

<form id='filter_parks' action="" method=''>
    <label> Filter by Park</label>
    <select id='parks_filter' name="parks">
        <option value="">Please Select</option>
        {{#each parks}}
        <option value="{{parkID}}">{{parkID}} - {{name}}</option>
        {{/each}}
    </select><br>
    <input type="button" value="Filter" onclick="filterParks()">
</form><br>


